{
  "name": "@uploadcare/react-widget",
  "version": "1.3.7",
  "description": "React component for Uploadcare Widget",
  "main": "dist/cjs/index.js",
  "module": "dist/esm/index.js",
  "types": "types/index.d.ts",
  "sideEffects": false,
  "scripts": {
    "lint:types": "dtslint types --onlyTestTsNext",
    "lint:js": "eslint ./src/** ./test/** rollup.config.js",
    "clean": "rimraf dist en min en-min",
    "build": "rollup -c",
    "dummy": "parcel dummy/index.html",
    "prepublishOnly": "npm run clean && npm run build",
    "test:dev": "jest",
    "format": "prettier --write \"./src/**/*.js\" \"./test/**/*.js\" rollup.config.js",
    "test": "npm run lint:js && npm run lint:types && jest",
    "release:prepare": "shipjs prepare",
    "release:trigger": "shipjs trigger"
  },
  "files": [
    "dist/*",
    "min/*",
    "en/*",
    "en-min/*",
    "locales.js",
    "types/index.d.ts"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/uploadcare/react-widget.git"
  },
  "keywords": [
    "react",
    "component",
    "uploadcare",
    "widget",
    "uploader",
    "filepicker",
    "dialog",
    "upload",
    "store",
    "file",
    "files",
    "image",
    "images"
  ],
  "authors": [
    "Ivakhnenko Dmitry"
  ],
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/uploadcare/react-widget/issues"
  },
  "homepage": "https://github.com/uploadcare/react-widget",
  "dependencies": {
    "@uploadcare/client-suspense": "^1.0.5",
    "react-fast-compare": "^3.2.0",
    "uploadcare-widget": "^3.10.2"
  },
  "peerDependencies": {
    "react": "^16.10.2 || ^17.0.0",
    "react-dom": "^16.10.2 || ^17.0.0"
  },
  "devDependencies": {
    "@babel/cli": "7.14.5",
    "@babel/core": "7.14.5",
    "@babel/preset-env": "7.14.5",
    "@babel/preset-react": "7.14.5",
    "@rollup/plugin-commonjs": "11.0.2",
    "@rollup/plugin-replace": "2.4.2",
    "@testing-library/jest-dom": "5.14.1",
    "@testing-library/react": "11.2.7",
    "@types/jquery": "3.5.5",
    "@types/react": "17.0.11",
    "@types/react-dom": "17.0.7",
    "babel-eslint": "10.1.0",
    "babel-plugin-annotate-pure-calls": "0.4.0",
    "dtslint": "4.1.0",
    "eslint": "7.28.0",
    "eslint-config-prettier": "8.3.0",
    "eslint-config-standard": "16.0.3",
    "eslint-config-standard-jsx": "10.0.0",
    "eslint-plugin-import": "2.23.4",
    "eslint-plugin-node": "11.1.0",
    "eslint-plugin-prettier": "3.4.0",
    "eslint-plugin-promise": "4.3.1",
    "eslint-plugin-react": "7.24.0",
    "eslint-plugin-react-hooks": "4.2.0",
    "eslint-plugin-standard": "4.1.0",
    "jest": "26.6.3",
    "jest-canvas-mock": "2.3.1",
    "jest-esm-jsx-transform": "1.0.0",
    "parcel-bundler": "1.12.5",
    "prettier": "2.3.1",
    "react": "17.0.2",
    "react-dom": "17.0.2",
    "rimraf": "3.0.2",
    "rollup": "2.51.2",
    "rollup-plugin-babel": "4.4.0",
    "rollup-plugin-module-replacement": "1.2.1",
    "rollup-plugin-terser": "7.0.2",
    "shipjs": "0.23.3",
    "typescript": "4.3.2",
    "uploadcare-widget-tab-effects": "1.5.0"
  },
  "jest": {
    "setupFiles": [
      "./__setups__/scroll.js",
      "jest-canvas-mock"
    ],
    "testMatch": [
      "**/test/**/*.js"
    ],
    "transform": {
      "\\.js$": "jest-esm-jsx-transform"
    }
  }
}
